<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block page_title %}Plus Court Chemin{% endblock %}</title>
        <link rel="stylesheet" href="{{asset("assets/css/profile.css")}}">
        <link rel="stylesheet" href="{{asset("assets/css/global.css")}}">
        <link rel="stylesheet" href="{{asset("assets/css/keyFrames.css")}}">
        <link rel="stylesheet" href="{{asset("assets/css/nav.css")}}">
        <link rel="icon" href="{{asset("assets/img/logo_site.jpg")}}">
    </head>

    <body>
        <header>
            {% include('nav.html.twig') %}

            <div class="pileFlash">
                {% set types = ['success','info', 'warning', 'danger']%}
                {% for type in types %}
                    {% for messageFlash in messagesFlash[type] %}
                        <div class="alert alert-{{ type }}">{{messageFlash}}</div>
                    {% endfor %}
                {% endfor %}
            </div>
        </header>

        <main>
            <div id="content">
                {% block page_content %}{% endblock %}
            </div>
        </main>

        <footer>
            Site du plus court chemin, 2023 Prog'Raleur
        </footer>
    </body>
</html>